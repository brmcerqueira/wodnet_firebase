{
  "rules": {
    ".read": false,
    ".write": false,
    "chronicles": {
      ".read": "auth != null",
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    },
    "characters": {
      "$uid": {
        ".read": "$uid === auth.uid || data.child('chronicle/$uid').val() === auth.uid",
        ".write": "$uid === auth.uid && !newData.exists()"
      }
    }
  }
}
